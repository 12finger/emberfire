<p>{{#link-to 'users'}}Back to all{{/link-to}}</p>

<h1>{{model.name}}</h1>

<ul>
    {{#each model.somethings as |something|}}
        <li>
            <h3>{{#link-to 'something' something}}{{ something.title }}{{/link-to}}</h3>
            <p>{{ something.description }}</p>
        </li>
    {{/each}}
</ul>

<ul>
    {{#each model.thoughts as |thought|}}
        <li>
            <p>{{ thought.musing }}</p>
            {{#each thought.tags as |tag| }}
                <small>{{ tag.name }}</small>
            {{/each}}
        </li>
    {{/each}}
</ul>

<ul>
    {{#each model.comments as |comment|}}
        <li>
            <p>{{#link-to 'comment' comment }}{{ comment.body }}{{/link-to}}</p>
            {{#if comment.something}}<small>{{#link-to "something" comment.something.id}}{{comment.something.name}}{{/link-to}}</small>{{/if}}
        </li>
    {{/each}}
</ul>